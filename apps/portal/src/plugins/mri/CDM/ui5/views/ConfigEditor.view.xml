<mvc:View controllerName="hc.hph.cdw.config.ui.views.ConfigEditor" width="100%" height="100%" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.commons.layout" 
	xmlns:c="sap.ui.commons">
	<Page showHeader="false" showSubHeader="false" enableScrolling="false">
		<content>
			<c:Splitter splitterPosition="30%" width="100%">
				<c:firstPaneContent>
					<l:BorderLayout width="100%" class="sapUiUfdShellBackground">
						<l:center>
							<l:BorderLayoutArea id="filterCardsListLayout">
							</l:BorderLayoutArea>
						</l:center>
					</l:BorderLayout>
				</c:firstPaneContent>
				<c:secondPaneContent>
					<l:BorderLayout width="100%">
						<l:center>
							<l:BorderLayoutArea id="configEditorDetailsLayout"></l:BorderLayoutArea>
						</l:center>
					</l:BorderLayout>
				</c:secondPaneContent>
			</c:Splitter>
		</content>
	</Page>
</mvc:View>