<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core" >
    <Dialog title="{infoDialogModel>/title}" type='Message' >
        <content>
            <Text text="{infoDialogModel>/text}" />
        </content>
        <beginButton>
            <Button text="{infoDialogModel>/buttonText}" press="onInfoDialogClose" />
        </beginButton>
    </Dialog>  
</core:FragmentDefinition>