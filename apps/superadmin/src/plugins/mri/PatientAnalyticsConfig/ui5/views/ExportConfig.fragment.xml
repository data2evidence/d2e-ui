<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>MRI_PA_CFG_EXPORT_CONFIG_POPOVER_TITLE}"
            icon="sap-icon://question-mark"
            class="sapMMessageBoxQuestion"
            type="Message">
        <VBox>
            <Text text="{i18n>MRI_PA_CFG_EXPORT_UNSAVED_CHANGES_DESCRIPTION}"/>
            <Text text="{i18n>MRI_PA_CFG_EXPORT_UNSAVED_CHANGES_DETAILS}"
                class="sapUiTinyMarginTop" />
        </VBox>
        <buttons>
            <Button text="{i18n>MRI_PA_CFG_BUTTON_SAVE_AND_EXPORT}" press="onExportConfigurationWithSave" />
            <Button text="{i18n>MRI_PA_CFG_BUTTON_CANCEL}" press="onExportConfigurationCanceled" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
