<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<ColumnListItem
		type="{
			path: 'Folders',
			formatter: 'sap.hc.hph.core.ui.fileSelection.util.Formatter.listItemType'
		}">
		<cells>
			<core:Icon src="{ parts: [ { path: 'OriginalEntry/Selected' }, { path: 'OriginalEntry/Folders' } ], formatter: 'sap.hc.hph.core.ui.fileSelection.util.Formatter.getCheckmark' }" />
		</cells>
		<cells>
			<Text text= "{Name}"/>
		</cells>
		<cells>
			<Text text= "{parts:[{path:'OriginalEntry/FilteredSelectedCount'},{path:'OriginalEntry/FilteredCount'}],formatter: 'sap.hc.hph.core.ui.fileSelection.util.Formatter.getCount'}" class="sapHcHphUi-FileCount" />
		</cells>
		<cells>
			<Text text="{Size}"/>
		</cells>
		<cells>
			<Text text="{ path: 'LastUpdated', formatter: 'sap.hc.hph.core.ui.fileSelection.util.Formatter.formatDate', 
                        formatOptions: {
					       style: 'long'
				        } }" 
						/>
		</cells>
		 
	<cells>
        <Text text="{path:'Status', formatter:'sap.hc.hph.core.ui.fileSelection.util.Formatter.messageText'}"/>
		</cells>
		<cells>
			<Text text="{ path: 'LastImported', formatter: 'sap.hc.hph.core.ui.fileSelection.util.Formatter.formatDate', 
                        formatOptions: {
					       style: 'long'
				        } }" 
						/>
		</cells>
	</ColumnListItem>
</core:FragmentDefinition> 
